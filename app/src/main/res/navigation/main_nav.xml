<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/landingFragment">

    <fragment
        android:id="@+id/landingFragment"
        android:name="live.adabe.findmyblood.ui.fragments.LandingFragment"
        android:label="fragment_landing"
        tools:layout="@layout/fragment_landing" >
        <action
            android:id="@+id/action_landingFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_landingFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/action_landingFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="live.adabe.findmyblood.ui.fragments.SignUpFragment"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up" >
        <action
            android:id="@+id/action_signUpFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="live.adabe.findmyblood.ui.fragments.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="live.adabe.findmyblood.ui.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_requestScreenFragment"
            app:destination="@id/requestScreenFragment" />
        <action
            android:id="@+id/action_homeFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
    <fragment
        android:id="@+id/requestScreenFragment"
        android:name="live.adabe.findmyblood.ui.fragments.RequestScreenFragment"
        android:label="fragment_request_screen"
        tools:layout="@layout/fragment_request_screen" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="live.adabe.findmyblood.ui.fragments.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/dashboardScreenFragment"
        android:name="live.adabe.findmyblood.ui.fragments.DashboardScreenFragment"
        android:label="fragment_dashboard_screen"
        tools:layout="@layout/fragment_dashboard_screen" />
    <fragment
        android:id="@+id/incomingRequestFragment"
        android:name="live.adabe.findmyblood.ui.fragments.IncomingRequestFragment"
        android:label="fragment_incoming_request"
        tools:layout="@layout/fragment_incoming_request" />
    <fragment
        android:id="@+id/sentRequestFragment"
        android:name="live.adabe.findmyblood.ui.fragments.SentRequestFragment"
        android:label="fragment_sent_request"
        tools:layout="@layout/fragment_sent_request" />
</navigation>